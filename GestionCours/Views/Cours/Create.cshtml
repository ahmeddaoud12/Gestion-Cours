@model GestionCours.Models.GestionViewModel.Cours

@{
    ViewData["Title"] = "Create";
}
<br />
<section class="content">
    <div class="container-fluid">
        <center>
            <div class="col-md-6">
                <!-- general form elements -->
                <div class="card card-primary">
                    <div class="card-header">
                        <h3 class="card-title">Ajouter Nouveau Cours</h3>
                    </div>
                    <!-- /.card-header -->
                    <!-- form start -->
                    <form asp-action="Create">
                        <div asp-validation-summary="ModelOnly" class="text-danger"></div>
                        <div class="card-body">
                            <div class="form-group">
                                <label asp-for="TitleCours" style="float:left;">Title Cours</label>
                                <input asp-for="TitleCours" class="form-control" placeholder="Title Cours ... ">
                                <span asp-validation-for="TitleCours" class="text-danger"></span>
                            </div>
                            <div class="form-group">
                                <label asp-for="Description" style="float:left;">Description</label>
                                <textarea asp-for="Description" class="form-control" rows="4" placeholder="Description ... "></textarea>
                                <span asp-validation-for="Description" class="text-danger"></span>
                            </div>
                            <div class="form-group">
                                <label asp-for="LinkDownload" style="float:left;">Link Download</label>
                                <input asp-for="LinkDownload" class="form-control" placeholder="Link Download ... ">
                                <span asp-validation-for="LinkDownload" class="text-danger"></span>
                            </div>
                            <button type="submit" class="btn btn-primary btn-flat" style="float:left;">Submit</button>
                        </div>
                        <!-- /.card-body -->

                    </form>
                </div>
                <!-- /.card -->
            </div>
        </center>
            
            
    </div><!-- /.container-fluid -->
</section>