@model GestionCours.Models.AdministrationViewModels.EditRoleViewModel
@{
    ViewData["Title"] = "Edit Role";
}
<!-- Content Header (Page header) -->
<div class="content-header">
    <div class="container-fluid">
        <div class="row mb-2">
            <div class="col-sm-6">
                <h1 class="m-0 text-dark"></h1>
            </div><!-- /.col -->
            <div class="col-sm-6">
                <ol class="breadcrumb float-sm-right">
                    <li class="breadcrumb-item"><a href="#">Roles</a></li>
                    <li class="breadcrumb-item active">Create</li>
                </ol>
            </div><!-- /.col -->
        </div><!-- /.row -->
    </div><!-- /.container-fluid -->
</div>
<!-- /.content-header -->
<!-- Main content -->
<section class="content">
    <div class="container-fluid">
        <div class="card card-default color-palette-box">
            <div class="card-header">
                <h3 class="card-title">
                    <i class="fas fa-edit"></i>
                    Modifier Role
                </h3>
            </div>
            <div class="card-body">
                <div class="container">
                    <form method="post">
                        <div class="form-group row">
                            <label asp-for="Id" class="col-sm-2 col-form-label"></label>
                            <div class="col-sm-10">
                                <input asp-for="Id" disabled class="form-control" />
                            </div>
                        </div>
                        <div class="form-group row">
                            <label asp-for="RoleName" class="col-sm-2 col-form-label"></label>
                            <div class="col-sm-10">
                                <input asp-for="RoleName" class="form-control" />
                                <span asp-validation-for="RoleName" class="text-danger"></span>
                            </div>
                        </div>
                        <div asp-validation-summary="All" class="text-danger"></div>
                        <div class="form-group row">
                            <div class="col-sm-10">
                                <button type="submit" class="btn btn-outline-success">Update</button>
                                <a asp-action="ListRoles" class="btn btn-outline-danger">Cancel</a>
                            </div>
                        </div>
                        <div class="card card2 card-blue">
                            <div class="card-header card-header2">
                                <h3>Utilisateurs dans ce rôle</h3>
                            </div>
                            <div class="card-body">
                                @if (Model.Users.Any())
                                {
                                    foreach (var user in Model.Users)
                                    {
                                        <h5 class="card-title">@user</h5>
                                    }
                                }
                                else
                                {
                                    <h5 class="card-title">None at the moment</h5>
                                }
                            </div>
                            <div class="card-footer">
                                <a asp-action="EditUsersInRole" asp-controller="Administrations" asp-route-roleId="@Model.Id" class="btn btn-outline-info">
                                    Ajouter / Supprimer
                                </a>
                            </div>
                        </div>
                    </form>
                </div>
            </div>
            <!-- /.card-body -->
        </div>
    </div>
    <!-- /.container-fluid -->
</section>
<!-- /.content -->






























