@using System.Collections.Generic
@using System.Linq
@using Microsoft.AspNetCore.Http
@using Microsoft.AspNetCore.Http.Authentication
@model LoginViewModel
@inject SignInManager<ApplicationUser> SignInManager

@{
    ViewData["Title"] = "Log in";
    Layout = null;
}
<!DOCTYPE html>
<html>
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title> ManagementProjet</title>
    <link href="~/lib/bootstrap/dist/css/bootstrap.min.css" rel="stylesheet" />
    <link href="~/css/Login.css" rel="stylesheet" />
    <link href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/4.7.0/css/font-awesome.css" rel="stylesheet" />
    <style>
        .container-fluid {
            padding-left: 0px;
            padding-right: 0px;
        }
    </style>
</head>
<body>
    <div class="bg">
        <div class="container-fluid">
            <center>
                    <div class="vertical-center">
                        <div class="col-lg-4 col-md-6 col-sm-8 col-10 backdiv">
                            <form asp-route-returnurl="@ViewData["ReturnUrl"]" method="post" class="padding-form">
                                <h4 class="title1">
                                    Utiliser votre compte.
                                </h4>
                                <div class="form-group">
                                    <label asp-for="UserName" class="tilteinput"></label>
                                    <input asp-for="UserName" class="form-control input1" placeholder="UserName" />
                                    <div class="icon3">
                                        <i class="fa fa-user" aria-hidden="true"></i>
                                    </div>
                                    <span asp-validation-for="UserName" class="text-danger"></span>
                                </div>
                                <div class="form-group">
                                    <label asp-for="Password" class="tilteinput"></label>
                                    <input asp-for="Password" class="form-control input1" placeholder="Password" />
                                    <div class="icon3">
                                        <i class="fa fa-unlock-alt" aria-hidden="true"></i>
                                    </div>
                                    <span asp-validation-for="Password" class="text-danger"></span>
                                </div>
                                <div class="row">
                                    <div class="col-md-6 col-sm-6 col-6 form-group text1">
                                        <div class="checkbox">
                                            <label asp-for="RememberMe" class="label_reminber">
                                                <input asp-for="RememberMe" />
                                                @Html.DisplayNameFor(m => m.RememberMe)
                                            </label>
                                        </div>
                                    </div>
                                    <div class="col-md-6 col-sm-6 col-6 form-group text2">
                                        <p>
                                            <a asp-action="Register" class="forget_password">Register Now ?</a>
                                        </p>
                                    </div>
                                </div>
                                <br />
                                <div class="form-group">
                                    <button type="submit" class="btn buttonLog" >Log in</button>
                                </div>
                            </form>
                        </div>
                    </div>
            </center>
        </div>
    </div>
    <script src="~/lib/jquery/dist/jquery.min.js"></script>
    <script src="~/lib/jquery/dist/popper.min.js"></script>
    <script src="~/lib/bootstrap/dist/js/bootstrap.min.js"></script>

    @await Html.PartialAsync("_ValidationScriptsPartial")
</body>
</html>
